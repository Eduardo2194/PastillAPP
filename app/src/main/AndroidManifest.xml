<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grupoupc.pastillapp">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pastillapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pastillapp"
        android:supportsRtl="true"
        android:theme="@style/Theme.PastillAPP">
        <activity android:name=".activities.ProductDetail"></activity>
        <activity android:name=".activities.AddProduct" />
        <activity
            android:name=".activities.AddPharmacy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RecoverPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Home"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Register"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.Login" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>